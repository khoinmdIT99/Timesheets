@model Timesheets.Models.Project

@{
    ViewData["Title"] = "Delete";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Delete</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active">Delete Project</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-xl-10 offset-xl-1">
                    <!-- general form elements -->
                    <div class="card card-danger">
                        <div class="card-header">
                            <h3 class="card-title">Are you sure you want to delete this?</h3>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.OwnerDepartment)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.OwnerDepartment.DepartmentId)
                                </dd>
                            </dl>
                            @if ((bool) ViewData["ExistingProjects"])
                            {
                                <p class="text-danger"> This Project contains Timesheet Entries.
                            If you delete it, those Timesheet Entries will be deleted as well!</p>
                            }
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ProjectId" />
                                <input type="submit" value="Delete" class="btn btn-danger" 
                                       onclick="return confirm('Are you sure you want to delete this Project?');" />
                                <a class="btn btn-secondary" asp-action="Index">Back to Projects</a>
                            </form>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>