@model DepartmentDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Details</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active">Department Details</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-xl-10 offset-xl-1">
                        <!-- general form elements -->
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Department Details</h3>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Department.Name)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.Department.Name)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Department.DepartmentHead)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @Html.DisplayFor(model => model.DepartmentHead.FirstName) @Html.DisplayFor(model => model.DepartmentHead.LastName)
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Department.OwnedProjects)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @(string.Join(", ", Model.OwnedProjects.Select(p => p.Name)));
                                    </dd>
                                    <dt class="col-sm-3">
                                        @Html.DisplayNameFor(model => model.Department.RelatedProjects)
                                    </dt>
                                    <dd class="col-sm-9">
                                        @(string.Join(", ", Model.RelatedProjects.Select(p => p.Name)));
                                    </dd>
                                </dl>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="Department.DepartmentId">Edit</a>
                                <a class="btn btn-secondary" asp-action="Index">Back to Departments</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </section>
    </div>